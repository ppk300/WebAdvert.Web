@model WebAdvert.Web.Models.Accounts.SignupModel
@{
    ViewData["Title"] = "Signup Page";
}


<div class="row">
    <div class="">
        <form method="post" asp-controller="Accounts" asp-action="Signup_Post">
            <h4>Create a new account</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger">

            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmationPassword"></label>
                <input asp-for="ConfirmationPassword" class="form-control" />
                <span asp-validation-for="ConfirmationPassword" class="text-danger"></span>
            </div>

            <button type="submit">Submit</button>
        </form>

        <a asp-controller="Accounts" asp-action="LoginIndex">
            Login
        </a>
  

    </div>
</div>